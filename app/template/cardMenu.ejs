<%- include('header') %>

<%- include('navbar', {user: user, search: true}) %>

<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <br>
      <%- messages('message', locals) %>
      <h1 class="jumbotron-heading"><%- json.title %></h1>
      <p class="lead text-muted"><%- json.p %></p>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% json.cards.forEach(card => { %>
          <%- include('card', {card: card}) %>
        <% }) %>
      </div>
      <%- include('copyright') %>
    </div>
  </div>
</main>

<%- include('footer') %>
