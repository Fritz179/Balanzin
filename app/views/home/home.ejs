<%- include('../header') %>

<%- include('../navbar', {user: user, search: true}) %>

<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <br>
      <%- messages('message', locals) %>
      <h1 class="jumbotron-heading">Welcome <%= user ? 'back, ' + user.username : 'to my website' %></h1>
      <p class="lead text-muted">Some of my most beautiful creation are shown here, you can click around and give a try to some cool graphical examples of what you can do with js.
        <% if (!user) { %>
          you also may consider to <a href='/users/login'>click here to log in</a> for more quality content ;-)
        <% } %>
      </p>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% cards.forEach(card => { %>
          <%- include('../card', {card: card}) %>
        <% }) %>
      </div>
      <%- include('../copyright') %>
    </div>
  </div>
</main>

<%- include('../footer') %>
