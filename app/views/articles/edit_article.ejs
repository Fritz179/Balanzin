<%- include('header') %>

<%- include('navbar', {user: user, nav: [{txt: 'Articles', href: '/articles'}]}) %>

<main role="main">
  <section class="jumbotron top-margin">
    <div class="container">
      <%- messages('message', locals) %>
      <h1>Edit article</h1>
       <form method="post" action=<%= '/articles/edit/' + article._id %>>
          <div class="form-group"><label>Title:</label><input class="form-control" name="title" type="text" value='<%= article.title %>'></div>
          <div class="form-group"><label>Body:</label><textarea class="form-control" name="body"><%= article.body %></textarea></div>
          <br><input class="btn btn-primary" type="submit" value="Save changes">
       </form>
       <%- include('copyright') %>
    </div>
  </section>
</main>

<%- include('footer') %>
