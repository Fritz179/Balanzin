<%- include('header') %>

<%- include('navbar', {user: user, nav: [{txt: 'WWE', href: '/wwe'}]}) %>

<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <br>
      <%- messages('message', locals) %>
      <h1 class="jumbotron-heading">WWE</h1>
      <p class="lead text-muted">In this projet you can lear a lot about the WWE! and you can even play a game made in collaboration with CUSTASCH!<br>
        <a href='/wwe/game'>clicking here to give it a try</a>
      </p>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% cards.forEach(card => { %>
          <%- include('card', {card: card}) %>
        <% }) %>
      </div>
      <%- include('copyright') %>
    </div>
  </div>
</main>

<%- include('footer') %>
